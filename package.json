{
  "name": "structure-creator-monorepo",
  "private": true,
  "scripts": {
    "dev": "concurrently \"pnpm tauri:dev\" \"pnpm dev:web\"",
    "dev:desktop": "pnpm --filter @structure-creator/desktop dev",
    "dev:web": "pnpm --filter @structure-creator/web dev",
    "build": "pnpm build:shared &&pnpm build:desktop && pnpm build:web",
    "build:desktop": "pnpm --filter @structure-creator/desktop build",
    "build:web": "pnpm --filter @structure-creator/web build",
    "build:shared": "pnpm --filter @structure-creator/shared build",
    "tauri:dev": "pnpm --filter @structure-creator/desktop tauri dev",
    "tauri:build": "pnpm --filter @structure-creator/desktop tauri build",
    "test": "pnpm --filter @structure-creator/desktop test",
    "test:run": "pnpm --filter @structure-creator/desktop test:run"
  },
  "devDependencies": {
    "concurrently": "^9.2.1"
  }
}
