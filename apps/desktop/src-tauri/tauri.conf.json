{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Structure Creator",
  "mainBinaryName": "structure-creator",
  "version": "1.0.0",
  "identifier": "com.structurecreator.app",
  "build": {
    "beforeDevCommand": "pnpm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Structure Creator",
        "width": 1200,
        "height": 800,
        "minWidth": 900,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": ["icons/folder-plus.png"]
  },
  "plugins": {}
}
