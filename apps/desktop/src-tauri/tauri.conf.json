{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Structure Creator",
  "mainBinaryName": "structure-creator",
  "version": "1.0.0",
  "identifier": "com.structurecreator.app",
  "build": {
    "beforeDevCommand": "pnpm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Structure Creator",
        "width": 1200,
        "height": 800,
        "minWidth": 900,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": ["icons/folder-plus.png"],
    "createUpdaterArtifacts": true
  },
  "plugins": {
    "updater": {
      "endpoints": [
        "https://github.com/eddiemoore/structurecreator/releases/latest/download/latest.json"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEUwNUUyQTMyRUVFNDEwODMKUldTREVPVHVNaXBlNEtRV0hmbWR0dzJ4bTBvbmVtcU9yQWd2SzdYS0Y5OWQyMkhSNHlmQ3FROW8K"
    }
  }
}
